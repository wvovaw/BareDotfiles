set imap_pass = `/bin/pass show google/vladimir5313375015@gmail.com`
set smtp_pass = " `/bin/pass show google/vladimir5313375015@gmail.com`

set from = "vladimir5313375015@gmail.com:587"
set realname = "Vladimir"

# Boxes
set spoolfile = "+INBOX"
set record = "+Sent"
set trash = "+Trash"
set postponed = "+Drafts"
mailboxes =INBOX =Sent =Drafts =Spam =Trash

# Settings
set sort=reverse-date
set sidebar_visible
set sidebar_format="%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats

# Vim like binds
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry

# Sidebar binds
bind index,pager \CK sidebar-prev                 # Ctrl-p to select prev folder
bind index,pager \CJ sidebar-next                 # Ctrl-n to select next folder
bind index,pager \CO sidebar-open                 # Ctrl-i to open selected folder
bind index,pager \CB sidebar-toggle-visible       # Ctrl-b to toggle visibility of the sidebar

# Source colors
source colors.muttrc
