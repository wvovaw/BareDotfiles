format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.secondary}
click-left = $TERMINAL -e calcurse
click-right = ! pgrep -f pomotroid &> /dev/null && pomotroid &
interval = 5

